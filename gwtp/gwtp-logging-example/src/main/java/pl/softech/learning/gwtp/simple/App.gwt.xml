<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.5.0//EN"
        "http://google-web-toolkit.googlecode.com/svn/tags/2.5.0/distro-source/core/src/gwt-module.dtd">

<module rename-to='app'>
	<!-- Inherit the core Web Toolkit stuff. -->

	<!-- GinUiBinder allows injecting widgets in UiBinder -->
	<inherits name="com.google.gwt.uibinder.GinUiBinder" />



	<!-- Inherit the default GWT style sheet. You can change -->
	<inherits name='com.google.gwt.user.theme.standard.Standard' />
	<!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
	<!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/> -->

	<inherits name="com.gwtplatform.mvp.MvpWithEntryPoint" />

	<inherits name="com.google.common.collect.Collect" />
	<inherits name="com.google.common.base.Base" />

	<!-- Logging -->
	<inherits name="com.google.gwt.logging.Logging" />

	<inherits name="pl.softech.learning.gwtp.simple.SuperDevMode" />

	<inherits name="pl.softech.learning.gwtp.simple.Logging" />


	<!-- Specify the paths for translatable code -->
	<source path='client' />

	<set-configuration-property name="gin.ginjector.modules"
		value="pl.softech.learning.gwtp.simple.client.gin.ClientModule" />

	<set-configuration-property name="gin.ginjector.extensions"
		value="pl.softech.learning.gwtp.simple.client.gin.GinjectorExtension" />

	<set-configuration-property name="gwtp.prebootstrapper"
		value="pl.softech.learning.gwtp.simple.client.app.PreBootstrapperImpl" />

</module>
