<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.root {
			width: 500px;
			margin-left: auto;
			margin-right: auto;
		}
		
		.gwtp {
			margin-bottom: 15px;
		}
		
		.label {
			font-weight: bold;
		}
		
		.label-error {
			color: red;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.root}">

		<h1>GWTP App Spring Example</h1>

		<div class="{style.label}">Please enter some text:</div>
		<g:TextBox ui:field="message" />
		<g:Button ui:field="sendButton">Send</g:Button>
		<g:HTML ui:field="error" styleName="{style.label-error}" />

	</g:HTMLPanel>
</ui:UiBinder>

