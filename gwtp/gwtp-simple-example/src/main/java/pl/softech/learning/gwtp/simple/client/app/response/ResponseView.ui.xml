<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.root {
			width: 500px;
			margin-left: auto;
			margin-right: auto;
		}
		
		.label {
			font-weight: bold;
			float: left;
		}
		
		.container {
			float: left;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.root}">

		<h1>Response</h1>

		<div>
			<div class="{style.label}">Hello:</div>
			<g:HTML ui:field="name" />
		</div>
		
		<g:Button ui:field="closeButton">Close</g:Button>

	</g:HTMLPanel>
</ui:UiBinder> 
